// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id String @id
  firstName String
  lastName String
  email String @unique
  phone String
  password String
  isAdmin Boolean @default(false)
  createdAt DateTime @default(now())

  @@map("clients")
}